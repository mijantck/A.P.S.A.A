<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".product.FullProductView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_support"
        android:layout_width="match_parent"
        app:titleTextColor="#FFFF"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        android:background="@android:color/darker_gray">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >

                <TextView
                    android:textSize="20sp"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:text="Product view "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>




        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <LinearLayout
                            android:id="@+id/one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="250dp">
                                <ImageView
                                    android:id="@+id/mainimage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                            </RelativeLayout>

                            <HorizontalScrollView
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp">
                                    <ImageView
                                        android:scaleType="fitXY"
                                        android:layout_marginLeft="5dp"
                                        android:id="@+id/imageClick1"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        />
                                    <ImageView
                                        android:scaleType="fitXY"
                                        android:layout_marginLeft="3dp"
                                        android:id="@+id/imageClick2"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        />
                                    <ImageView
                                        android:scaleType="fitXY"
                                        android:layout_marginLeft="3dp"
                                        android:id="@+id/imageClick3"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        />
                                    <ImageView
                                        android:scaleType="fitXY"
                                        android:layout_marginLeft="3dp"
                                        android:id="@+id/imageClick4"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        />
                                    <ImageView
                                        android:scaleType="fitXY"
                                        android:layout_marginLeft="3dp"
                                        android:id="@+id/imageClick5"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        />
                                </LinearLayout>

                            </HorizontalScrollView>

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/productImageDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/textimage" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                app:contentPadding="2dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:textStyle="bold"
                                            android:id="@+id/ProductNameDetails"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Full Name"
                                            android:textColor="#000"
                                            android:textSize="20dp" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_alignParentRight="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textStyle="bold"
                                            android:text="MRP :  "
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:id="@+id/LigalPrice"
                                            android:textColor="@color/grean"
                                            android:textStyle="bold"
                                            android:text="00.00"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                app:contentPadding="2dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:padding="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_gravity="center">

                                    <com.google.android.material.button.MaterialButton
                                        android:layout_marginTop="10dp"
                                        android:padding="5dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:textColor="@android:color/white"
                                        android:text="Buy It Now "
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:id="@+id/btn_buy_now"
                                        android:backgroundTint="@color/purple_700"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                        app:cornerRadius="1000dp"/>


                                    <com.google.android.material.button.MaterialButton
                                        android:layout_marginTop="10dp"
                                        android:padding="5dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:textColor="@color/purple_700"
                                        android:text="Add to cart "
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:id="@+id/btn_Add_to_cart"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                        app:cornerRadius="1000dp"
                                        app:strokeColor="@color/purple_700"/>

                                    <com.google.android.material.button.MaterialButton
                                        android:layout_marginTop="10dp"
                                        android:padding="5dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:textColor="@color/purple_700"
                                        android:text="Add to Watchlist"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:id="@+id/btn_add_to_watchlist"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                        app:cornerRadius="1000dp"
                                        app:strokeColor="@color/purple_700"/>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="280dp"
                                android:layout_marginBottom="30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Related Product"
                                    android:textColor="#000" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/shopD" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/fullProductViewReletetProuct"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    />
                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardCornerRadius="5dp"
                                card_view:contentPadding="2dp"
                                card_view:cardElevation="2dp"
                                card_view:cardBackgroundColor="@android:color/white"
                                card_view:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="20dp"
                                        android:text="About this item"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <LinearLayout
                                        android:weightSum="10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_weight="8"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text="Quantity "
                                                android:textSize="15dp" />

                                            <TextView
                                                android:textColor="@color/black"
                                                android:layout_width="wrap_content"
                                                android:id="@+id/ProductCode"
                                                android:layout_height="match_parent"
                                                android:text="1 Abaleable"
                                                android:textSize="15dp" />

                                        </LinearLayout>


                                    </LinearLayout>
                                    <LinearLayout
                                        android:weightSum="10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_weight="6"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content">

                                            <TextView

                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text="Region of Orgin "
                                                android:textSize="15dp" />

                                            <TextView
                                                android:textColor="@color/black"
                                                android:id="@+id/ProductcolorView"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text="Bngladesh"
                                                android:textSize="15dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text="Original / repoduction "
                                                android:textSize="15dp" />

                                            <TextView
                                                android:textColor="@color/black"
                                                android:id="@+id/ProductSizeView"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text=" antique Original"
                                                android:textSize="15dp" />
                                        </LinearLayout>
                                    </RelativeLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Age "
                                            android:textSize="15dp" />

                                        <TextView
                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text=" Pre-1800"
                                            android:textSize="15dp" />

                                    </LinearLayout>


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardCornerRadius="5dp"
                                card_view:contentPadding="2dp"
                                card_view:cardElevation="2dp"
                                card_view:cardBackgroundColor="@android:color/white"
                                card_view:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                <TextView
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Item descripiton from the seller "
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/ProductDescriptionView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/one"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:id="@+id/shopD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Shipping,Returen &amp; Payment "
                                    android:textColor="#000" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/shopD" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="Est.Delivery"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/shopDetailName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="Shipping,Returen &amp; Paymentsdjfhskjdhfkjsdhfkjsdhf; kjsfjsd ksdjjffs;jsf;jksdjsbv jskhfsj jshjasdfhsldk "
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/shopDetailPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="Returs "
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/shopDetailAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="Payment "
                                    android:textSize="12sp" />
                                <ImageView
                                    android:src="@drawable/pyment"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"/>
                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>